<p id="notice"><%= notice %></p>

<h1>Listing Caves</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Nama</th>
      <th>Alamat</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caves.each do |cafe| %>
      <tr>
        <td><%= cafe.nama %></td>
        <td><%= cafe.alamat %></td>
        <td><%= cafe.phone %></td>
        <td><%= cafe.website %></td>
        <td><%= link_to 'Show', cafe %></td>
        <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
        <td><%= link_to 'Destroy', cafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

